&НаСервереБезКОнтекста
Функция ОбщаяСкидка(СогласованнаяСкидка, СкидкаСтроки, НомерСтроки, ТАбличнаяЧасть = "")
//++расчет общей скидки с проверкой и сообщением  
	КоэффициентСкидки = 1 - (СкидкаСтроки + СогласованнаяСкидка)/ 100;
	Если КоэффициентСкидки < 0 Тогда
		Сообщение = Новый СообщениеПользователю;
        Сообщение.Текст = "В строке №"+НомерСтроки+"
            			  |Скидка строки: "+Строка(СкидкаСтроки)+"% " + "
            			  | в сумме с согласованной скидкой "+СогласованнаяСкидка+"%" + " 
            			  | превышает 100%";
        ОбъектТабличнаяЧасть = "Объект." + ТАбличнаяЧасть + "["; 
		Сообщение.Поле = ОбъектТабличнаяЧасть + (НомерСтроки-1)+"].Скидка"; 
        Сообщение.Сообщить();
	    КоэффициентСкидки = 0 ;
	КонецЕсли;
    Возврат КоэффициентСкидки;

КонецФункции

