		ОтветАсинх = ВопросАсинх(ТекстВопроса,РежимДиалогаВопрос.ДаНет)  ;
		ОТвет = Ждать ОтветАсинх;
		Если ОТвет = КодВозвратаДиалога.Да Тогда
	        ПересчетСоСкидкой();
		КонецЕсли;
    КонецЕсли;								
КонецПроцедуры 

&НаКлиенте
Процедура ПересчетСоСкидкой()
//Вызов пересчета табличных частей с учетом скидки
	ДЗ_ПересчетСоСкидкойСервер("Товары"); 
	ДЗ_ПересчетСоСкидкойСервер("Услуги");
	РассчитатьСуммуДокумента();
//--	
КонецПроцедуры

&НаСервере
Процедура ДЗ_ПересчетСоСкидкойСервер(ИмяТабличнойЧасти)
//пересчет суммы для  отдельной табличной части
	Если ИмяТабличнойЧасти = "Товары" Тогда
		ТабличнаяЧасть = Объект.Товары;
	ИНачеЕсли ИмяТабличнойЧасти = "Услуги" Тогда
		ТабличнаяЧасть = Объект.Услуги;
	ИНаче
		Возврат;
	КонецЕсли;
	Для Каждого Строчка из ТабличнаяЧасть Цикл 
	
	    ОбщаяСкидка = ОбщаяСкидка(Объект.СогласованнаяСкидка, 
								  Строчка.Скидка, 
								  Строчка.НомерСтроки, 
								  ИмяТабличнойЧасти);
		Строчка.Сумма = Строчка.Цена * Строчка.Количество * ОбщаяСкидка;  
		Строчка.Скидка = Строчка.Цена * Строчка.Количество - Строчка.Сумма;
	КонецЦикла;
//--								   
КонецПроцедуры 

